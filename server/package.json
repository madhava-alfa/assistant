    "ts-node": "^10.9.2",
    "type-fest": "^4.37.0",
    "typescript": "^5.7.3"
  },
  "files": [
    "dist/src/**/*"
  ],
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.758.0",
    "@google/generative-ai": "^0.22.0",
    "@madhava-yallanki/dynamo-mapper": "^1.0.2",
    "pino": "^9.6.0"
  },
  "bundleDependencies": [
    "@aws-sdk/client-sqs",
    "@google/generative-ai",
    "@madhava-yallanki/dynamo-mapper",
    "pino"
  ]
